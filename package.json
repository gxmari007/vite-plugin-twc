{
  "name": "vite-plugin-twc",
  "version": "0.1.0",
  "description": "Tailwindcss plugin for vite",
  "author": "James Gao",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "npm run build -- --watch src",
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "example:vue-dev": "pnpm run dev --filter vue",
    "example:vue-build": "pnpm run build --filter vue",
    "lint": "eslint src",
    "prepublishOnly": "npm run build",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "files": [
    "dist",
    "config"
  ],
  "keywords": [
    "tailwindcss",
    "vite-plugin"
  ],
  "homepage": "https://github.com/gxmari007/vite-plugin-twc",
  "repository": "git+https://github.com:gxmari007/vite-plugin-twc.git",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "standard-version": {
    "scripts": {
      "posttag": "git push --follow-tags origin master && npm publish"
    }
  },
  "dependencies": {
    "autoprefixer": "^10.3.4",
    "defu": "^5.0.0",
    "postcss": "^8.3.6",
    "postcss-custom-properties": "^12.0.0",
    "postcss-nesting": "^8.0.1",
    "tailwind-config-viewer": "^1.6.2",
    "tailwindcss": "^2.2.15"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/node": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "prettier": "^2.4.1",
    "rollup": "^2.56.3",
    "standard-version": "^9.3.1",
    "tsup": "^5.1.0",
    "typescript": "^4.4.3",
    "vite": "^2.5.10"
  },
  "peerDependencies": {
    "vite": "^2.5.0"
  }
}
